<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/mGs"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/video_stand_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/video_stand_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/video_stand_head"
                android:paddingHorizontal="5dp"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:textColor="#EC33E2"
                android:id="@+id/tv_context"
                android:layout_below="@id/video_stand_head"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="20sp"
                android:textSize="16sp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginRight="30dp"
            android:layout_marginBottom="150dp"
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/ic_launcher"
                android:id="@+id/iv_image1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:background="@drawable/zan"
                android:layout_below="@id/iv_image1"
                android:id="@+id/iv_image2"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>